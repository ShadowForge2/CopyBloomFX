[Unit]
Description=Celery Worker for crypto platform
After=network.target redis.service

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/crypto_platform/repo
Environment="PATH=/var/www/crypto_platform/venv/bin"
ExecStart=/var/www/crypto_platform/venv/bin/celery -A crypto_platform worker -l info
ExecStop=/bin/kill -s TERM $MAINPID
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
